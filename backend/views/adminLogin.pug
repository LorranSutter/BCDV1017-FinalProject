extends layout

block head-content
    link(rel="stylesheet" href="/style/adminLogin.css")
    script(src="/js/adminLogin.js")

block content
    div(class="login-container")
        div(class="content")
            div(class="content-items")
                form(action="/admin", method="post" class="form")
                    h1 Admin Login
                    input(type="text" name="login" id="login" placeholder="Login")
                    input(type="password" name="password" id="username" placeholder="Password")
                    div(class="buttons")
                        a(href="#")
                            button(id="login") Login
                        a(href="/")
                            button(id="cancel") Cancel